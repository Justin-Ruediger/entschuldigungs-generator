<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/static/css/global.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/card.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/form.css" />
    <title>Schule Hinzufügen</title>
  </head>
  <body>
    <% if(typeof error != 'undefined'){ %>
    <script>
      alert("You need to fill out all fields");
    </script>
    <% } %>

    <form action="./addSchool" method="POST">
      <div class="card neumorphism">
        <h1 class="header">Schule Hinzufügen</h1>
        <div class="divider"></div>
        <input
          class="neumorphism"
          type="text"
          name="name"
          placeholder="Knecht Schule"
          required="required"
        />
        <input
          class="neumorphism"
          type="text"
          name="address"
          placeholder="Neue Straße 7"
          required="required"
        />
        <input
          class="neumorphism"
          type="text"
          name="city"
          placeholder="10115 Berlin"
          required="required"
        />
        <button id="btn-submit" type="submit" class="neumorphism">
          Schule hinzufügen
        </button>
        <a class="sub-title" href="./selectChild">Abbrechen</a>
      </div>
    </form>
  </body>
</html>
