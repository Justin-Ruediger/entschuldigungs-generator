<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/static/css/global.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/card.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/form.css" />
    <link rel="icon" href="/static/icons/logo.svg" type="image/x-icon" />
    <title>Daten eingeben</title>
  </head>
  <body>
    <% if(typeof error != 'undefined'){ %>
    <script>
      alert("You need to fill out all fields");
    </script>
    <% } %>

    <form action="<%" ="?" %>
      method="POST">
      <div class="card neumorphism">
        <h1 class="header">Daten eingeben</h1>
        <div class="divider"></div>
        <% for(var i = 0; i < properties.length; i++) { %>
        <input
          class="neumorphism"
          type="text"
          name="<%= properties[i].name %>"
          placeholder="<%= properties[i].question %>"
          required="required"
        />
        <% } %>
        <button id="btn-submit" type="submit" class="neumorphism">
          Absenden
        </button>
        <a class="sub-title" href="../../selectChild">Abbrechen</a>
      </div>
    </form>
  </body>
</html>
